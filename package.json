{
  "author": "Robert Smieja",
  "description": "Template repository for a Typescript-based Node.js project",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.4.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "keywords": [
    "typescript",
    "nodejs",
    "template",
    "babel",
    "webpack"
  ],
  "license": "MIT",
  "lint-staged": {
    "src/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "name": "typescript-template",
  "private": true,
  "scripts": {
    "build": "npm run-script build:prod",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.dev.js",
    "lint": "eslint ./src/**/*",
    "lint:staged": "lint-staged",
    "lint:fix": "eslint --fix ./src/**/*",
    "prettier": "prettier --write '*.{js,ts,jsx,tsx,json,md}'",
    "start": "run-s build:dev start:dev",
    "start:dev": "node dist/bundle.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "version": "0.1.0"
}
